# Change Focus
lcmd - h : yabai -m window --focus west
lcmd - j : yabai -m window --focus south
lcmd - k : yabai -m window --focus north
lcmd - l : yabai -m window --focus east
lcmd - left : yabai -m window --focus west
lcmd - down : yabai -m window --focus south
lcmd - up : yabai -m window --focus north
lcmd - right : yabai -m window --focus east

# Shift Window
lcmd + shift - h : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)
lcmd + shift - j : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
lcmd + shift - k : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
lcmd + shift - l : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)
lcmd + shift - left : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)
lcmd + shift - down : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
lcmd + shift - up : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
lcmd + shift - right : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)

# Insertion Points
lcmd + ctrl - h : yabai -m window --insert west
lcmd + ctrl - j : yabai -m window --insert south
lcmd + ctrl - k : yabai -m window --insert north
lcmd + ctrl - l : yabai -m window --insert east
lcmd + ctrl - left : yabai -m window --insert west
lcmd + ctrl - down : yabai -m window --insert south
lcmd + ctrl - up : yabai -m window --insert north
lcmd + ctrl - right : yabai -m window --insert east

# Change workspaces
lcmd + shift - 1 : yabai -m window --space 1
lcmd + shift - 2 : yabai -m window --space 2
lcmd + shift - 3 : yabai -m window --space 3
lcmd + shift - 4 : yabai -m window --space 4
lcmd + shift - 5 : yabai -m window --space 5
lcmd + shift - 6 : yabai -m window --space 6
lcmd + shift - 7 : yabai -m window --space 7
lcmd + shift - 8 : yabai -m window --space 8
lcmd + shift - 9 : yabai -m window --space 9

# Mirroring
lcmd + shift - y : yabai -m space --mirror y-axis
lcmd + shift - x : yabai -m space --mirror x-axis
lcmd + shift - 0 : yabai -m space --balance

# Change Layout
lcmd - e : yabai -m space --layout bsp
lcmd - l : yabai -m space --layout float
lcmd - s : yabai -m space --layout stack

# Terminate
lcmd - w : yabai -m window --close

# Fullscreen
lcmd - f : yabai -m window --toggle zoom-fullscreen
lcmd + shift - f : yabai -m window --toggle native-fullscreen

